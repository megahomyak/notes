{{ template "generic_page" . -}}

{{ define "title" -}}
    {{ if .user -}}
        Your Notes
    {{- else -}}
        Notes
    {{- end -}}
{{ end -}}

{{ define "head" -}}
    {{ if not .user }}
        <meta name="google-signin-client_id" content="{{ .googleClientID }}">
        <script src="https://apis.google.com/js/platform.js" async defer></script>
    {{ end }}
{{ end -}}

{{ define "header" -}}
    {{ template "title" . -}}
{{ end -}}

{{ define "contents" -}}
    {{ if .user -}}
        <form action="/sign_out/" method="post">
            <label>Signed in as {{ .user.FirstName }}{{ if .user.LastName }} {{ .user.LastName }}{{ end }} |</label>
            <input type="hidden" name="csrf_token" value="{{ .csrfToken }}">
            <input type="submit" value="Sign out">
        </form>
        {{ if ne (len .user.Notes) 0 -}}
            <ol>
            {{- range .user.Notes -}}
                <li><a href="/note/{{ .ID }}">{{ .Name }}</a></li>
            {{- end -}}
            </ol>
        {{- else -}}
            <p>You haven't created any notes yet!</p>
        {{- end -}}
    {{- else -}}
        <p>It seems like you're not signed in!</p>
        <div class="g-signin2" data-onsuccess="onSignIn"></div>
        <script>
            async function onSignIn(googleUser) {
                const idToken = googleUser.getAuthResponse().id_token;
                let requestForm = new FormData();
                requestForm.set("id_token", idToken);
                await fetch("/api/sign_in/", {
                    method: "POST",
                    body: requestForm,
                });
                location.reload();
            }
        </script>
    {{- end -}}
{{ end -}}
