{{ define "generic_page" -}}
<!DOCTYPE html>
<html>
    <head>
        <title>{{ template "title" . }}</title>
        {{- template "head" . }}
    </head>
    <body>
        <header>
            <h1>{{ template "header" . }}</h1>
        </header>
        {{ template "contents" . }}
    </body>
</html>
{{- end -}}

{{- define "csrf_token_field" -}}
<input type="hidden" name="csrf_token" value="{{ .csrfToken }}">
{{- end -}}
